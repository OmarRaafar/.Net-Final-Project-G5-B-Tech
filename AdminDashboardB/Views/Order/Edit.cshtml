@model DTOsB.Order.OrderDTO.AddOrUpdateOrderBDTO
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5 ">
    <div class="row justify-content-center">

        <div class="col-lg-6 col-md-8 col-sm-12 mt-5">

            <form asp-action="Edit" class="shadow p-4 rounded bg-light">
                <h2 class="text-center mb-4 bg-light fw-bold text-primary p-4 shadow rounded" style="margin-top: -80px">Edit Order</h2>

                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="TotalPrice" />
                <input type="hidden" asp-for="ApplicationUserId" />


                <div class="form-group">
                    <label asp-for="CurrentStatus" class="control-label"></label>
                    <div class="col-md-10">
                        <select asp-for="CurrentStatus" class="form-control">
                            <option value="">Select Status</option>
                            @foreach (var status in Enum.GetValues(typeof(ModelsB.Order_B.Status)))
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>
                </div>



                <div class="d-grid gap-2 mt-4">
                    <button class="btn btn-success shadow" type="submit">Update</button>
                </div>


            </form>
        </div>
    </div>
</div>
